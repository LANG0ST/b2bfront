<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.fx.b2bfront.controller.auth.AuthController"
           prefWidth="1600" prefHeight="900"
           minWidth="1600" maxWidth="1600"
           minHeight="900" maxHeight="900"
           stylesheets="@../style/auth.css">

    <!-- BACKGROUND FORMS -->
    <HBox prefWidth="1600" prefHeight="900"
          minWidth="1600" maxWidth="1600"
          minHeight="900" maxHeight="900">

        <!-- LOGIN FORM (LEFT) -->
        <VBox fx:id="loginPane" alignment="CENTER" spacing="40"
              prefWidth="800" minWidth="800" maxWidth="800"
              prefHeight="900" minHeight="900" maxHeight="900">

            <Label text="LOGIN" styleClass="label-title"/>

            <VBox spacing="15" maxWidth="350">

                <Label text="Email"/>
                <TextField fx:id="loginEmail" prefHeight="45" styleClass="text-input"/>

                <Label text="Password"/>
                <PasswordField fx:id="loginPassword" prefHeight="45" styleClass="text-input"/>

                <Button fx:id="loginButton"
                        text="Sign In"
                        prefWidth="350" prefHeight="48"
                        styleClass="primary-button"/>

                <Hyperlink fx:id="forgotPasswordLink"
                           text="Forgot password?"
                           onAction="#openForgotPassword"
                           style="-fx-text-fill: #111;"/>

            </VBox>
        </VBox>

        <!-- SIGNUP FORM (RIGHT) -->
        <VBox fx:id="signupPane" alignment="CENTER" spacing="40"
              prefWidth="800" minWidth="800" maxWidth="800"
              prefHeight="900" minHeight="900" maxHeight="900">

            <Label text="SIGN UP" styleClass="label-title"/>

            <VBox spacing="10" maxWidth="350">

                <Label text="Company Name"/>
                <TextField fx:id="signupName" prefHeight="45" styleClass="text-input"/>

                <Label text="ICE (Identifiant Commun de l'Entreprise)"/>
                <TextField fx:id="signupIce" prefHeight="45" styleClass="text-input"/>

                <Label text="Email"/>
                <TextField fx:id="signupEmail" prefHeight="45" styleClass="text-input"/>

                <Label text="Password"/>
                <PasswordField fx:id="signupPassword" prefHeight="45" styleClass="text-input"/>

                <Label text="Address"/>
                <TextField fx:id="signupAddress" prefHeight="45" styleClass="text-input"/>

                <Label text="City"/>
                <ComboBox fx:id="signupCity" prefHeight="45" styleClass="text-input"/>

                <Label text="Phone"/>
                <TextField fx:id="signupPhone" prefHeight="45" styleClass="text-input"/>

                <Button fx:id="signupButton"
                        text="Register"
                        prefWidth="350" prefHeight="48"
                        styleClass="primary-button"
                        onAction="#registerCompany"
                />
            </VBox>

        </VBox>

    </HBox>

    <!-- SLIDER PANEL -->
    <Pane fx:id="slider"
          prefWidth="800" minWidth="800" maxWidth="800"
          prefHeight="900" minHeight="900" maxHeight="900"
          StackPane.alignment="CENTER_LEFT"
          translateX="800"
          id="slider">

        <!-- IMAGE EN PREMIER PLAN -->
        <ImageView
                fitWidth="800"
                fitHeight="900"
                preserveRatio="false"
                opacity="1"
                pickOnBounds="false">
            <image>
                <Image url="@../images/auth_bg2.png" />
            </image>
        </ImageView>

        <!-- CONTENU DU SLIDER PAR DESSUS L'IMAGE -->
        <VBox alignment="CENTER" spacing="40"
              prefWidth="800" minWidth="800" maxWidth="800"
              prefHeight="900" minHeight="900" maxHeight="900">

            <Label fx:id="slideTitle"
                   text="DON'T HAVE AN ACCOUNT?"
                   wrapText="true"
                   styleClass="slider-title"/>

            <Button fx:id="slideButton"
                    text="SIGN UP"
                    prefWidth="200" prefHeight="55"
                    styleClass="action-button"/>
        </VBox>

    </Pane>


</StackPane>
