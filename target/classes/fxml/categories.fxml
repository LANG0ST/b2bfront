<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.categories.CategoriesController"
            prefWidth="1600" prefHeight="900"
            stylesheets="@../style/categories.css">

    <!-- ==================================== -->
    <!--              TOP NAVBAR              -->
    <!-- ==================================== -->
    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>


    <!-- ==================================== -->
    <!--          LEFT FILTER PANEL           -->
    <!-- ==================================== -->
    <left>
        <VBox prefWidth="280"
              spacing="20"
              styleClass="filters-panel">

            <padding>
                <Insets top="30" right="20" bottom="20" left="30"/>
            </padding>

            <!-- Title -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filtres" styleClass="filters-title"/>
                <Label text="Effacer"
                       styleClass="filters-clear"
                       onMouseClicked="#clearFilters"/>
            </HBox>

            <!-- Category Name -->
            <Label text="Catégorie"
                   styleClass="filters-section-title"/>

            <Label fx:id="currentCategoryLabel"
                   text="Nom de catégorie"
                   styleClass="filters-current-category"/>

            <!-- Filter items -->
            <Label text="Affiner par"
                   styleClass="filters-section-title"/>

            <VBox fx:id="filtersBox"
                  spacing="10"
                  styleClass="filters-box"/>

        </VBox>
    </left>


    <!-- ==================================== -->
    <!--           PRODUCTS CENTER            -->
    <!-- ==================================== -->
    <center>
        <ScrollPane fitToWidth="true"
                    fitToHeight="true"
                    hbarPolicy="NEVER"
                    styleClass="products-scroll">

            <VBox spacing="30"
                  styleClass="products-root">

                <padding>
                    <Insets top="20" left="20" right="20" bottom="30"/>
                </padding>

                <!-- Header row: ONLY title (sort removed) -->
                <HBox spacing="20"
                      styleClass="products-header">

                    <Label fx:id="productsTitle"
                           text="Produits"
                           styleClass="products-title"/>

                </HBox>

                <!-- Product grid -->
                <TilePane fx:id="productsTile"
                          hgap="20" vgap="20"
                          prefColumns="3"
                          styleClass="products-tile">

                    <!-- Cards injected from controller -->

                </TilePane>

            </VBox>
        </ScrollPane>
    </center>


</BorderPane>