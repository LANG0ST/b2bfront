<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.Admin.UsersGestionController"
            stylesheets="@../../style/dashboard.css"
            prefHeight="900" prefWidth="1600">

    <!-- ======================================================== -->
    <!--                         TOP HEADER                        -->
    <!-- ======================================================== -->
    <top>
        <fx:include source="../components/TopBar.fxml"/>
    </top>

    <!-- ======================================================== -->
    <!--                        SIDE NAVIGATION                    -->
    <!-- ======================================================== -->
    <left>
        <VBox spacing="8" styleClass="sidebar">
            <Label text="MENU" styleClass="sidebar-section"/>

            <Region styleClass="section-separator"/>
            <Button text="Dashboard" styleClass="sidebar-item" onMouseClicked="#openDashboard"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion d'Utilisateurs" styleClass="sidebar-active" onMouseClicked="#openUsersModule"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion de Produits" styleClass="sidebar-item" onMouseClicked="#openProductsModule"/>
            <Region styleClass="section-separator"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Region styleClass="section-separator"/>
            <Button text="Déconnexion" styleClass="sidebar-logout" onMouseClicked="#openAuthpage"/>
        </VBox>
    </left>
    <Region VBox.vgrow="ALWAYS"/>

    <!-- CONTENT -->
    <center>
        <StackPane fx:id="mainContent">
        <VBox spacing="30" styleClass="main-content" fx:id="usersPage">

            <Label text="Gestion des utilisateurs" styleClass="section-title"/>

            <!-- =================== SEARCH + FILTERS =================== -->
            <HBox spacing="20" alignment="CENTER_LEFT">

                <!-- Search bar -->
                <TextField fx:id="searchField"
                           promptText="Rechercher un utilisateur (nom, email, téléphone...)"
                           styleClass="search-bar"
                           prefWidth="380"/>

                <!-- Filter by Enabled -->
                <ComboBox fx:id="statusFilter"
                          promptText="Statut"
                          styleClass="filter-box"
                          prefWidth="150"/>

                <!-- Filter by City -->
                <ComboBox fx:id="cityFilter"
                          promptText="Ville"
                          styleClass="filter-box"
                          prefWidth="150"/>

                <!-- Clear filters -->
                <Button text="Réinitialiser" fx:id="clearFiltersBtn" styleClass="clear-filters-btn"/>

            </HBox>

            <!-- =================== MASS ACTIONS =================== -->
            <HBox spacing="15">
                <Button text="Bloquer sélection"  styleClass="action-btn"/>
                <Button text="Débloquer sélection" styleClass="action-btn-green"/>
                <Button text="Supprimer sélection" styleClass="action-btn-red"/>
            </HBox>

            <!-- =================== TABLE =================== -->
            <TableView fx:id="usersTable" styleClass="table">
                <columns>

                    <TableColumn text="✔" fx:id="selectCol" prefWidth="40"/>

                    <TableColumn text="ID" fx:id="idCol" prefWidth="40"/>
                    <TableColumn text="Nom" fx:id="nameCol" prefWidth="160"/>
                    <TableColumn text="Crée le " fx:id="createdAtCol" prefWidth="160"/>
                    <TableColumn text="Téléphone" fx:id="phoneCol" prefWidth="100"/>
                    <TableColumn text="Email" fx:id="emailCol" prefWidth="230"/>
                    <TableColumn text="Ville" fx:id="cityCol" prefWidth="100"/>
                    <TableColumn text="Activé" fx:id="enabledCol" prefWidth="85"/>

                    <!-- Actions -->
                    <TableColumn text="Actions" fx:id="actionsCol" prefWidth="320"/>

                </columns>
            </TableView>

        </VBox>
        </StackPane>
    </center>

    <!-- ======================================================== -->
    <!--                          FOOTER                           -->
    <!-- ======================================================== -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 B2B Platform | All rights reserved" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
