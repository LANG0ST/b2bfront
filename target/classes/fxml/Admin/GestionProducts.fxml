<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.Admin.ProductsGestionController"
            stylesheets="@../../style/dashboard.css"
            prefHeight="900" prefWidth="1600">

    <!-- ======================================================== -->
    <!--                         TOP HEADER                        -->
    <!-- ======================================================== -->
    <top>
        <fx:include source="../components/TopBar.fxml"/>
    </top>

    <!-- ======================================================== -->
    <!--                        SIDE NAVIGATION                    -->
    <!-- ======================================================== -->
    <left>
        <VBox spacing="8" styleClass="sidebar">
            <Label text="MENU" styleClass="sidebar-section"/>

            <Region styleClass="section-separator"/>
            <Button text="Dashboard" styleClass="sidebar-item" onMouseClicked="#openDashboard"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion d'Utilisateurs" styleClass="sidebar-item" onMouseClicked="#openUsersModule"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion de Produits" styleClass="sidebar-active" onMouseClicked="#openProductsModule"/>
            <Region styleClass="section-separator"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Region styleClass="section-separator"/>
            <Button text="Déconnexion" styleClass="sidebar-logout" onMouseClicked="#openAuthpage"/>
        </VBox>
    </left>
    <Region VBox.vgrow="ALWAYS"/>

    <!-- CONTENT -->
    <center>
        <StackPane fx:id="mainContent">
        <VBox spacing="30" styleClass="main-content" fx:id="productsPage">

            <Label text="Gestion des products" styleClass="section-title"/>

            <VBox spacing="20">
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Rechercher product..." styleClass="search-bar"/>
                    <ComboBox fx:id="filterCategorie"  styleClass="filter-box"/>
                    <ComboBox fx:id="filterCompany"  styleClass="filter-box"/>
                    <Button text="Réinitialiser" fx:id="clearFiltersBtn" styleClass="clear-filters-btn"/>
                </HBox>

                <HBox spacing="15">
                    <Button text="Supprimer sélection" styleClass="action-btn-red"/>
                </HBox>

                <TableView fx:id="productsTable" styleClass="table">
                    <columns>
                        <TableColumn fx:id="selectCol" text="✔" prefWidth="50"/>
                        <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="nameCol" text="Nom" prefWidth="200"/>
                        <TableColumn fx:id="descriptionCol" text="Description" prefWidth="325"/>
                        <TableColumn fx:id="priceCol" text="Prix" prefWidth="85"/>
                        <TableColumn fx:id="stockCol" text="Stock" prefWidth="50"/>
                        <TableColumn fx:id="categorieCol" text="Categorie" prefWidth="150"/>
                        <TableColumn fx:id="companyCol" text="Entreprise" prefWidth="150"/>
                        <TableColumn fx:id="actionsCol" text="Actions" prefWidth="175"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
        </StackPane>
    </center>
    <!-- ======================================================== -->
    <!--                          FOOTER                           -->
    <!-- ======================================================== -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 B2B Platform | All rights reserved" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
