<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900" prefWidth="1600" stylesheets="@../../style/dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fx.b2bfront.controller.Admin.AllBuyersController">

    <!-- SAME TOP -->
    <top>
        <fx:include source="../components/TopBar.fxml"/>
    </top>

    <!-- SAME SIDEBAR -->
    <left>
        <VBox spacing="8" styleClass="sidebar">
            <Label styleClass="sidebar-section" text="MENU" />

            <Region styleClass="section-separator" />
            <Button onMouseClicked="#openDashboard" styleClass="sidebar-item" text="Dashboard" />
            <Region styleClass="section-separator" />
            <Button onMouseClicked="#openUsersModule" styleClass="sidebar-item" text="Gestion d'Utilisateurs" />
            <Region styleClass="section-separator" />
            <Button onMouseClicked="#openProductsModule" styleClass="sidebar-item" text="Gestion de Produits" />
            <Region styleClass="section-separator" />

            <Region VBox.vgrow="ALWAYS" />

            <Region styleClass="section-separator" />
            <Button onMouseClicked="#openAuthpage" styleClass="sidebar-logout" text="Déconnexion" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40 70;">

                <!-- PAGE TITLE -->
                <Label contentDisplay="CENTER" styleClass="section-title" text="Ranking Of All Buyers" textOverrun="CLIP">
               <font>
                  <Font name="Bell MT Bold" size="12.0" />
               </font></Label>

                <!-- BIG WRAPPER -->
                <VBox fx:id="rankingContainer" styleClass="ranking-container" />

            </VBox>
        </ScrollPane>
    </center>

    <!-- SAME FOOTER -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label styleClass="footer-text" text="© 2025 B2B Platform | All rights reserved" />
        </HBox>
    </bottom>

</BorderPane>
