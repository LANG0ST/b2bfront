<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fx.b2bfront.controller.Admin.ProductDetailsController"
      spacing="25" alignment="TOP_CENTER"
      style="-fx-background-color: #FFFFFF; -fx-background-radius: 14;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- ===================== AVATAR + TITLE ===================== -->
    <VBox alignment="CENTER" spacing="12">

        <!-- PRODUCT ICON -->
        <Label text="ðŸ“¦" styleClass="user-avatar"/>

        <!-- PRODUCT TITLE -->
        <Label fx:id="title" styleClass="user-title"/>

        <!-- Small Description -->
        <Label text="Fiche produit" styleClass="user-subtitle"/>
    </VBox>

    <!-- ===================== SEPARATOR ===================== -->
    <Region maxHeight="1" prefHeight="1" styleClass="separator-line"/>

    <!-- ===================== PRODUCT FIELDS ===================== -->
    <VBox spacing="18" alignment="TOP_LEFT" style="-fx-padding: 10 0 0 0;">

        <!-- Nom -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Nom :" styleClass="details-label"/>
            <Label fx:id="nameLabel" styleClass="details-value"/>
        </HBox>

        <!-- Description -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Description :" styleClass="details-label"/>
            <Label fx:id="description" styleClass="details-value"/>
        </HBox>

        <!-- CatÃ©gorie -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="CatÃ©gorie :" styleClass="details-label"/>
            <Label fx:id="categorieLable" styleClass="details-value"/>
        </HBox>

        <!-- Prix -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Prix :" styleClass="details-label"/>
            <Label fx:id="price" styleClass="details-value"/>
        </HBox>

        <!-- Stock -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Stock :" styleClass="details-label"/>
            <Label fx:id="stock" styleClass="details-value"/>
        </HBox>

        <!-- Entreprise -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Entreprise :" styleClass="details-label"/>
            <Label fx:id="company" styleClass="details-value"/>
        </HBox>

    </VBox>

    <!-- ===================== BACK BUTTON ===================== -->
    <Button text="Retour" onAction="#goBack" styleClass="back-btn-text"/>

</VBox>
