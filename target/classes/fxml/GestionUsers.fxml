<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.Admin.UsersController"
            stylesheets="@../style/dashboard.css"
            prefHeight="900" prefWidth="1600">

    <!-- ======================================================== -->
    <!--                         TOP HEADER                        -->
    <!-- ======================================================== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-header">

            <!-- Logo -->
            <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png"/>
                </image>
            </ImageView>

            <!-- App Title -->
            <Label text="B2B Admin Dashboard" styleClass="header-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Search bar -->
            <TextField promptText="Rechercher..."
                       styleClass="search-bar"
                       prefWidth="320"/>

            <!-- Profile -->
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Label text="Admin" styleClass="profile-name"/>
                <ImageView fitHeight="36" fitWidth="36" preserveRatio="true" styleClass="profile-avatar">
                    <image>
                        <Image url="@../images/admin.png"/>
                    </image>
                </ImageView>
            </HBox>

        </HBox>
    </top>

    <!-- ======================================================== -->
    <!--                        SIDE NAVIGATION                    -->
    <!-- ======================================================== -->
    <left>
        <VBox spacing="8" styleClass="sidebar">

            <Label text="MENU" styleClass="sidebar-section"/>

            <Button text="Dashboard"      styleClass="sidebar-item" onMouseClicked="#openDashboard"/>
            <Button text="Gestion d'Utilisateurs"   styleClass="sidebar-active" onMouseClicked="#openUsersModule"/>
            <Button text="Gestion de Produits"       styleClass="sidebar-item" onMouseClicked="#openProductsModule"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="Déconnexion"    styleClass="sidebar-logout" onMouseClicked="#openAuthpage"/>

        </VBox>
    </left>
    <Region VBox.vgrow="ALWAYS"/>

    <!-- CONTENT -->
    <center>
        <VBox spacing="30" styleClass="main-content">

            <Label text="Gestion des utilisateurs" styleClass="section-title"/>

            <!-- =================== SEARCH + FILTERS =================== -->
            <HBox spacing="20" alignment="CENTER_LEFT">

                <!-- Search bar -->
                <TextField fx:id="searchField"
                           promptText="Rechercher un utilisateur (nom, email, téléphone...)"
                           styleClass="search-bar-users"
                           prefWidth="380"/>

                <!-- Filter by Enabled -->
                <ComboBox fx:id="statusFilter"
                          promptText="Statut"
                          styleClass="filter-box"
                          prefWidth="150"/>

                <!-- Filter by City -->
                <ComboBox fx:id="cityFilter"
                          promptText="Ville"
                          styleClass="filter-box"
                          prefWidth="150"/>

                <!-- Clear filters -->
                <Button text="Réinitialiser" fx:id="clearFiltersBtn" styleClass="clear-filters-btn"/>

            </HBox>

            <!-- =================== MASS ACTIONS =================== -->
            <HBox spacing="15">
                <Button text="Bloquer sélection"  styleClass="action-btn"/>
                <Button text="Débloquer sélection" styleClass="action-btn-green"/>
                <Button text="Supprimer sélection" styleClass="action-btn-red"/>
            </HBox>

            <!-- =================== TABLE =================== -->
            <TableView fx:id="usersTable" styleClass="users-table">
                <columns>

                    <TableColumn text="✔" fx:id="selectCol" prefWidth="40"/>

                    <TableColumn text="ID" fx:id="idCol" prefWidth="60"/>
                    <TableColumn text="Nom" fx:id="nameCol" prefWidth="150"/>
                    <TableColumn text="Téléphone" fx:id="phoneCol" prefWidth="130"/>
                    <TableColumn text="Email" fx:id="emailCol" prefWidth="150"/>
                    <TableColumn text="Ville" fx:id="cityCol" prefWidth="130"/>
                    <TableColumn text="Créé le" fx:id="createdAtCol" prefWidth="170"/>
                    <TableColumn text="Activé" fx:id="enabledCol" prefWidth="105"/>

                    <!-- Actions -->
                    <TableColumn text="Actions" fx:id="actionsCol" prefWidth="300"/>

                </columns>
            </TableView>

        </VBox>
    </center>

    <!-- ======================================================== -->
    <!--                          FOOTER                           -->
    <!-- ======================================================== -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 B2B Platform | All rights reserved" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
