<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="900" prefWidth="1600"
            stylesheets="@../style/homepage.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.home.HomepageController">

    <!-- ================= TOP NAVIGATION ================= -->
    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>

    <!-- ================= LEFT SIDEBAR (Dynamic Categories) ================= -->
    <left>
        <VBox fx:id="sidebarCategories"
              prefHeight="900"
              prefWidth="300"
              spacing="15"
              styleClass="sidebar">
            <padding>
                <Insets top="25" bottom="25" left="20" right="20"/>
            </padding>

            <Label text="Categories" styleClass="sidebar-title"/>
            <!-- Buttons will be injected dynamically -->
        </VBox>
    </left>

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <VBox spacing="40">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>

            <!-- FEATURED BANNER -->
            <VBox prefWidth="1290" prefHeight="384" spacing="15" styleClass="featured-card">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>

                <Pane fx:id="featuredBanner"
                      minHeight="300"
                      prefHeight="320"
                      maxHeight="350"
                      prefWidth="1250"
                      styleClass="featured-image"/>
            </VBox>

            <!-- TRENDING -->
            <Label text="Trending Products" styleClass="section-title"/>

            <!-- PRODUCT GRID (Dynamic) -->
            <FlowPane fx:id="productsContainer"
                      prefWidth="1290"
                      hgap="25"
                      vgap="25"
                      styleClass="products-grid">
                <!-- Product cards injected by controller -->
            </FlowPane>

        </VBox>
    </center>

</BorderPane>