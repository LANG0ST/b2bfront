<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="900" prefWidth="1600" stylesheets="@../style/homepage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fx.b2bfront.controller.home.HomepageController">

    <!-- ================= TOP NAVIGATION ================= -->
    <top>
        <fx:include source="components/Navbar.fxml" />
    </top>

    <!-- ================= LEFT SIDEBAR ================= -->
    <left>
        <VBox prefHeight="820.0" prefWidth="316.0" spacing="15" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label styleClass="sidebar-title" text="Categories" />

            <Button prefHeight="50" prefWidth="259.0" styleClass="sidebar-item" text="Electronics" />
            <Button prefHeight="50" prefWidth="260.0" styleClass="sidebar-item" text="Machinery" />
            <Button prefHeight="50" prefWidth="259.0" styleClass="sidebar-item" text="Clothing" />
            <Button prefHeight="50" prefWidth="259.0" styleClass="sidebar-item" text="Food and Beverage" />
            <Button prefHeight="50" prefWidth="259.0" styleClass="sidebar-item" text="Office Supplies" />
            <Button prefHeight="50" prefWidth="259.0" styleClass="sidebar-item" text="Logistics" />

        </VBox>
    </left>

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <VBox spacing="40">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- FEATURED -->
            <VBox prefHeight="464.0" prefWidth="1290.0" spacing="15" styleClass="featured-card">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <Pane prefHeight="387.0" prefWidth="1250.0" styleClass="featured-image" />
            </VBox>

            <!-- TRENDING -->
            <Label prefHeight="21.0" prefWidth="185.0" styleClass="section-title" text="Trending Products" />

            <HBox prefHeight="318.0" prefWidth="1290.0" spacing="25">

                <VBox prefHeight="252.0" prefWidth="354.0" spacing="8" styleClass="product-card">
                    <Pane prefHeight="173.0" prefWidth="309.0" styleClass="product-image" />
                    <Label prefHeight="20.0" prefWidth="263.0" styleClass="product-name" text="Product 1" />
                    <Label styleClass="product-price" text="\$89" />
                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
