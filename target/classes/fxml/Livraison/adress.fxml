<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../style/checkout.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fx.b2bfront.controller.checkout.AddressController">

    <!-- NAVBAR -->
    <top>
        <fx:include source="../components/Navbar.fxml" />
    </top>

    <!-- MAIN BODY -->
    <center>
        <VBox spacing="40" styleClass="checkout-root">

            <HBox spacing="200">

                <!-- LEFT SIDE -->
                <VBox prefWidth="600" spacing="20">

                    <Label styleClass="checkout-title" text="Livraison" />

                    <HBox spacing="10" styleClass="checkout-steps">
                        <Label styleClass="step-current" text="Address" />
                        <Label text="—" />
                        <Label styleClass="step-next" text="Shipping" />
                        <Label text="—" />
                        <Label styleClass="step-next" text="Payment" />
                    </HBox>

                    <Label styleClass="section-title" text="Shipping Information" />

                    <VBox prefWidth="480" spacing="14">
                        <TextField fx:id="firstName" prefHeight="42.0" prefWidth="465.0" promptText="First Name" />
                        <TextField fx:id="address" prefHeight="42.0" prefWidth="465.0" promptText="Address" />
                        <TextField fx:id="city" prefHeight="42.0" prefWidth="465.0" promptText="City" />
                        <TextField fx:id="zipcode" promptText="Zipcode" />

                        <HBox spacing="8">
                            <CheckBox fx:id="saveInfo" />
                            <Label styleClass="small-label" text="Save contact information" />
                        </HBox>
                    </VBox>

                    <Button onAction="#goToShipping" styleClass="primary-button" text="Continue to shipping" />

                </VBox>

                <!-- RIGHT SIDE CART SUMMARY -->
                <fx:include source="CartSummary.fxml" />

            </HBox>

        </VBox>
    </center>

</BorderPane>
