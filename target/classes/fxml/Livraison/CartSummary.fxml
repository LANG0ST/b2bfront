<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fx.b2bfront.controller.checkout.CartSummaryController"
      spacing="20"
      styleClass="cart-summary-root">

    <!-- TITLE -->
    <Label text="Your cart" styleClass="cart-title"/>

    <!-- ===========================
         CART ITEMS CONTAINER
         dynamically filled later
    ============================ -->
    <VBox fx:id="cartItemsContainer" spacing="20">

        <!-- EXAMPLE ITEM STRUCTURE (you can delete this placeholder if loading from backend) -->
        <HBox spacing="10" styleClass="cart-item-box">

            <!-- Item Image Placeholder -->
            <Pane styleClass="cart-item-image"/>

            <!-- Item Details -->
            <VBox spacing="4">
                <Label text="Men’s winter jacket" styleClass="cart-item-name"/>
                <Label text="Size: L" styleClass="cart-item-size"/>
                <Label text="Quantity: 1" styleClass="cart-item-qty"/>
                <Label text="99" styleClass="cart-item-price"/>
                <Label text="Remove" styleClass="remove-link"/>
            </VBox>

        </HBox>

        <Separator styleClass="cart-divider"/>

        <HBox spacing="10" styleClass="cart-item-box">

            <Pane styleClass="cart-item-image"/>

            <VBox spacing="4">
                <Label text="Men’s winter jacket" styleClass="cart-item-name"/>
                <Label text="Size: L" styleClass="cart-item-size"/>
                <Label text="Quantity: 1" styleClass="cart-item-qty"/>
                <Label text="99" styleClass="cart-item-price"/>
                <Label text="Remove" styleClass="remove-link"/>
            </VBox>

        </HBox>

    </VBox>

    <Separator styleClass="cart-divider"/>

    <!-- ===========================
         COUPON FIELD
    ============================ -->
    <TextField fx:id="couponField"
               promptText="Enter coupon code here"
               styleClass="coupon-field"/>

    <!-- ===========================
         TOTALS SECTION
    ============================ -->
    <VBox spacing="8">

        <HBox alignment="CENTER_LEFT">
            <Label text="Subtotal" styleClass="total-label"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="subtotalLabel" text="0" styleClass="total-price"/>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Shipping" styleClass="total-label"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="shippingLabel" text="0" styleClass="total-price"/>
        </HBox>

        <Separator styleClass="cart-divider"/>

        <HBox alignment="CENTER_LEFT">
            <Label text="Total" styleClass="total-label"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalLabel" text="0" styleClass="total-final"/>
        </HBox>

    </VBox>

</VBox>
