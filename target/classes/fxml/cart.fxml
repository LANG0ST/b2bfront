<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fx.b2bfront.controller.cart.CartController"
            prefWidth="1600" prefHeight="900"
            stylesheets="@../style/cart.css">

    <!-- NAVBAR -->
    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>

    <!-- MAIN BODY -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="40" styleClass="cart-root">
                    <padding>
                        <Insets top="50" left="80" right="80" bottom="80"/>
                    </padding>

                    <!-- PAGE TITLE -->
                    <Label text="Votre Panier"
                           styleClass="cart-title"/>

                    <HBox spacing="80">

                        <!-- =============================== -->
                        <!-- LEFT SIDE — LIST OF ITEMS -->
                        <!-- =============================== -->
                        <VBox fx:id="cartItemsContainer"
                              spacing="30"
                              HBox.hgrow="ALWAYS"/>

                        <!-- =============================== -->
                        <!-- RIGHT SIDE — SUMMARY BOX -->
                        <!-- =============================== -->
                        <VBox spacing="25"
                              prefWidth="380"
                              styleClass="summary-box">

                            <Label text="Résumé de la commande"
                                   styleClass="summary-title"/>

                            <TextField fx:id="couponField"
                                       promptText="Code promo"
                                       styleClass="coupon-field"/>

                            <GridPane hgap="15" vgap="15">

                                <Label text="Sous-total:"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="0"/>

                                <Label fx:id="subtotalLabel"
                                       text="0 MAD"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"/>

                                <Label text="Livraison:"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="1"/>

                                <Label text="Calculée à l’étape suivante"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                                <Label text="Total:"
                                       styleClass="summary-total-label"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="2"/>

                                <Label fx:id="totalLabel"
                                       text="0 MAD"
                                       styleClass="summary-total"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>
                            </GridPane>

                            <Button fx:id="btnCheckout"
                                    text="Passer à la caisse"
                                    styleClass="checkout-button"/>
                        </VBox>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
