<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fx.b2bfront.controller.cart.CartController"
            prefWidth="1600" prefHeight="900"
            stylesheets="@../style/cart.css">

    <!-- NAVBAR -->
    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>

    <!-- MAIN BODY -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="40" styleClass="cart-root">
                    <padding>
                        <Insets top="40" left="60" right="60" bottom="80"/>
                    </padding>

                    <!-- PAGE TITLE -->
                    <Label text="Panier" styleClass="cart-title"/>

                    <HBox spacing="60">

                        <!-- LEFT: CART ITEMS LIST -->
                        <VBox spacing="30" HBox.hgrow="ALWAYS" fx:id="cartItemsContainer">
                            <!-- Items injected by controller -->
                        </VBox>

                        <!-- RIGHT: ORDER SUMMARY -->
                        <VBox spacing="20" prefWidth="350" styleClass="summary-box">

                            <Label text="Order Summary" styleClass="summary-title"/>

                            <TextField fx:id="couponField"
                                       promptText="Enter coupon code"
                                       styleClass="coupon-field"/>

                            <GridPane hgap="10" vgap="10" styleClass="summary-grid">
                                <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label fx:id="subtotalLabel"
                                       text="0 MAD"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                <Label text="Shipping:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <Label text="Calculated at next step"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                <Label text="Total:" styleClass="summary-total-label"
                                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <Label fx:id="totalLabel"
                                       text="0 MAD"
                                       styleClass="summary-total"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </GridPane>

                            <Button text="Continue to Checkout"
                                    fx:id="btnCheckout"
                                    styleClass="checkout-button"/>
                        </VBox>
                    </HBox>

                    <!-- ORDER INFO ACCORDION -->
                    <VBox spacing="25" styleClass="info-section">

                        <TitledPane text="Return Policy" expanded="false">
                            <Label text="Our return policy details..." wrapText="true"/>
                        </TitledPane>

                        <TitledPane text="Shipping Options" expanded="false">
                            <Label text="Shipping conditions..." wrapText="true"/>
                        </TitledPane>

                        <TitledPane text="Payment Information" expanded="false">
                            <Label text="Secure payments methods..." wrapText="true"/>
                        </TitledPane>

                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
