<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="900" prefWidth="1600" stylesheets="@../style/reviews.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.reviews.ReviewsController">

    <!-- TOP NAVBAR -->
    <top>
        <fx:include source="components/Navbar.fxml" />
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="30">

            <!-- ====================================== -->
            <!--   ðŸ”™ BACK BUTTON + PRODUCT TITLE BAR   -->
            <!-- ====================================== -->
            <HBox spacing="20"
                  alignment="CENTER_LEFT"
                  styleClass="cat-topbar">

                <Button text="â† Back"
                        onAction="#handleGoBack"
                        styleClass="cat-back-btn"/>

                <Label fx:id="productTitleLabel"
                       styleClass="cat-title"/>
            </HBox>
            <!-- ====================================== -->

            <!-- ORIGINAL PAGE CONTENT WRAPPED AS-IS -->
            <HBox alignment="TOP_LEFT" spacing="40.0">

                <!-- LEFT FILTER / SUMMARY -->
                <VBox prefWidth="250" spacing="20">

                    <Label styleClass="page-title" text="Reviews" />

                    <VBox spacing="10" styleClass="rating-summary">

                        <Label styleClass="big-stars" text="â˜…â˜…â˜…â˜…â˜…" />

                        <Label styleClass="rating-count" text="5 reviews" />

                        <VBox spacing="6">
                            <HBox spacing="10">
                                <Label text="5 stars" /> <Pane HBox.hgrow="ALWAYS" /> <Label text="(5)" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="4 stars" /> <Pane HBox.hgrow="ALWAYS" /> <Label text="(1)" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="3 stars" /> <Pane HBox.hgrow="ALWAYS" /> <Label text="(0)" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="2 stars" /> <Pane HBox.hgrow="ALWAYS" /> <Label text="(0)" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="1 star" /> <Pane HBox.hgrow="ALWAYS" /> <Label text="(0)" />
                            </HBox>
                        </VBox>

                    </VBox>

                </VBox>

                <!-- RIGHT LIST OF REVIEWS -->
                <VBox fx:id="reviewsContainer" prefWidth="900" spacing="40">

                    <!-- Review Example -->
                    <VBox spacing="10" styleClass="review-box">

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="review-stars" text="â˜…â˜…â˜…â˜…â˜…" />
                            <Pane HBox.hgrow="ALWAYS" />
                            <Label styleClass="review-date" text="October 21, 2025" />
                        </HBox>

                        <Label styleClass="review-title" text="Amazing and durable excavator" />

                        <Label styleClass="review-body"
                               text="Reliable industrial machine. Works perfectly on difficult terrain, fuel efficient, and strong build quality."
                               wrapText="true" />

                        <HBox spacing="20" styleClass="review-footer">
                            <Label text="Was this review helpful? Yes (4)  No (0)" />
                            <Label styleClass="flag-link" text="Flag as inappropriate" />
                        </HBox>

                    </VBox>

                    <HBox prefHeight="100.0" prefWidth="200.0" />

                </VBox>

                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </padding>

            </HBox>

        </VBox>
    </center>

</BorderPane>
