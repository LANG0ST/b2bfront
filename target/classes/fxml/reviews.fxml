<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fx.b2bfront.controller.reviews.ReviewsController"
            stylesheets="@../style/reviews.css"
            prefWidth="1400" prefHeight="900">

    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="40" styleClass="reviews-root">
                    <padding>
                        <Insets top="40" left="80" right="80" bottom="80"/>
                    </padding>

                    <Label fx:id="productTitle" styleClass="reviews-title"/>

                    <VBox spacing="20" fx:id="reviewsContainer"/>

                    <Separator/>

                    <!-- Write Review Form -->
                    <VBox spacing="15" styleClass="write-review-box">

                        <Label text="Écrire un avis" styleClass="write-title"/>

                        <HBox spacing="10">
                            <Label text="Note:"/>
                            <ComboBox fx:id="ratingCombo"/>
                        </HBox>

                        <TextArea fx:id="reviewText"
                                  prefRowCount="4"
                                  promptText="Votre avis ici..."
                                  wrapText="true"/>

                        <Button fx:id="btnSubmitReview"
                                text="Publier l’avis"
                                styleClass="submit-review-btn"/>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
