<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fx.b2bfront.controller.checkout.ShippingController"
            stylesheets="@../../style/checkout.css"
            prefWidth="1600" prefHeight="900">

    <!-- NAVBAR -->
    <top>
        <fx:include source="../components/Navbar.fxml"/>
    </top>

    <center>
        <VBox spacing="40" styleClass="checkout-root">

            <HBox spacing="200">

                <!-- LEFT SIDE -->
                <VBox prefWidth="600" spacing="20" styleClass="checkout-card">

                    <Label text="Livraison" styleClass="checkout-title"/>

                    <HBox spacing="10" styleClass="checkout-steps">
                        <Label text="Address" styleClass="step-done"/>
                        <Label text="—"/>
                        <Label text="Shipping" styleClass="step-current"/>
                        <Label text="—"/>
                        <Label text="Payment" styleClass="step-next"/>
                    </HBox>

                    <Label text="Choose shipping method" styleClass="section-title"/>

                    <VBox spacing="12">
                        <RadioButton fx:id="optionAmana"
                                     text="Amana Classic — 29 MAD"
                                     styleClass="shipping-option"/>

                        <RadioButton fx:id="optionAramex"
                                     text="Aramex Express — 49 MAD"
                                     styleClass="shipping-option"/>

                        <RadioButton fx:id="optionDHL"
                                     text="DHL International — 99 MAD"
                                     styleClass="shipping-option"/>
                    </VBox>

                    <Button text="Continue to payment"
                            onAction="#goToPayment"
                            styleClass="primary-button"/>

                </VBox>

                <!-- RIGHT SIDE CART SUMMARY -->
                <fx:include source="CartSummary.fxml"/>

            </HBox>

        </VBox>
    </center>

</BorderPane>
