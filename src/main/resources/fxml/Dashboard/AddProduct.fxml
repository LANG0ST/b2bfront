<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fx.b2bfront.controller.dashboard.AddProductController"
            stylesheets="@../../style/Udashboard.css">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="← Retour" fx:id="btnBack" styleClass="back-btn"/>
            <Label text="Ajouter un produit" styleClass="page-title"/>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- IMAGE PICKER -->
            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fx:id="imagePreview" fitWidth="220" fitHeight="220" preserveRatio="true"/>
                <Button text="Choisir une image" fx:id="btnChooseImage" styleClass="orange-btn"/>
            </VBox>

            <!-- FORM GRID -->
            <GridPane hgap="25" vgap="18">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Nom du produit"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descField" prefRowCount="3" prefWidth="350"
                          promptText="Description"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Prix (DH) :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" promptText="Ex: 250.00"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Stock :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="stockField" promptText="Quantité en stock"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Catégorie :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="categoryBox" prefWidth="240"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Tag Filtre :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="filterTagField" promptText="ex: excavator, cables..."
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- SUBMIT -->
            <Button text="Ajouter le produit" fx:id="btnSubmit" styleClass="orange-btn"
                    maxWidth="200"/>

        </VBox>
    </center>

</BorderPane>
