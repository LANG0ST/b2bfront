<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" prefHeight="80" spacing="30" styleClass="navbar" stylesheets="@../../style/Navbar.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fx.b2bfront.controller.components.NavbarController">

    <padding>
        <Insets left="40" right="40" />
    </padding>

    <!-- LOGO -->
    <Label styleClass="logo" text="B2B" />

    <!-- Search -->
    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <TextField prefHeight="45" prefWidth="500" promptText="Search products..." styleClass="search-bar" />
    </HBox>

    <!-- RIGHT ICON BUTTONS -->
    <HBox alignment="CENTER_RIGHT" spacing="25">

        <!-- Categories Dropdown -->
        <StackPane>
            <Button fx:id="btnCategories" styleClass="nav-button" text="Categories" />

            <VBox fx:id="dropdownCategories" managed="false" prefWidth="200" spacing="10" styleClass="dropdown" visible="false">

                <Label maxWidth="250.0" styleClass="dropdown-item" text="Electronics" />
                <Label maxWidth="250.0" styleClass="dropdown-item" text="Machinery" />
                <Label maxWidth="250.0" styleClass="dropdown-item" text="Clothing" />
                <Label maxWidth="250.0" styleClass="dropdown-item" text="Office Supplies" />
                <Label maxWidth="250.0" styleClass="dropdown-item" text="Food Beverage" />

            </VBox>
        </StackPane>

        <!-- Notifications Dropdown -->
        <StackPane>
            <Button fx:id="btnNotifications" styleClass="icon-button" text=" ðŸ”” Notifications" />

            <VBox fx:id="dropdownNotifications" alignment="TOP_LEFT" managed="false" prefWidth="250" spacing="12" styleClass="dropdown" visible="false">

                <Label styleClass="dropdown-item" text="Order 248 shipped" />
                <Label styleClass="dropdown-item" text="New message from client" />
                <Label styleClass="dropdown-item" text="Price update alert" />
                <Label styleClass="dropdown-item" text="Stock running low" />

                <Hyperlink styleClass="dropdown-footer" text="Mark all as read" />

            </VBox>
        </StackPane>

        <!-- Dashboard Button -->
        <Button styleClass="nav-button" text="Dashboard" />

        <!-- Account Button -->
        <Button styleClass="nav-button" text="Account" />

    </HBox>

</HBox>
