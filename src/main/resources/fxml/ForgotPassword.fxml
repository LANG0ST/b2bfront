<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fx.b2bfront.controller.auth.ForgotPasswordController"
      spacing="14"
      styleClass="popup-root"
      prefWidth="1400" prefHeight="300"
      stylesheets="@../style/auth-popups.css">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Forgot password" styleClass="popup-title"/>
    <Label text="Enter your email. We'll send you a reset token."
           wrapText="true"
           styleClass="popup-subtitle"/>

    <VBox spacing="8">
        <Label text="Email" styleClass="popup-label"/>
        <TextField fx:id="emailField" promptText="name@company.com" styleClass="popup-input"/>
    </VBox>

    <Label fx:id="statusLabel" managed="false" visible="false" wrapText="true"
           styleClass="popup-status"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel" styleClass="btn-secondary"/>
        <Button fx:id="sendBtn" text="Send token" onAction="#onSend" styleClass="btn-primary"/>
    </HBox>
</VBox>
