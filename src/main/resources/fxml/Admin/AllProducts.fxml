<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.b2bfront.controller.Admin.AllProductsController"
            stylesheets="@../../style/dashboard.css"
            prefHeight="900" prefWidth="1600">

    <!-- SAME TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-header">

            <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
                <image><Image url="@../../images/logo.png"/></image>
            </ImageView>

            <Label text="B2B Admin Dashboard" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Label text="Admin" styleClass="profile-name"/>
                <ImageView fitHeight="36" fitWidth="36" preserveRatio="true" styleClass="profile-avatar">
                    <image><Image url="@../../images/admin.png"/></image>
                </ImageView>
            </HBox>

        </HBox>
    </top>

    <!-- SAME SIDEBAR -->
    <left>
        <VBox spacing="8" styleClass="sidebar">
            <Label text="MENU" styleClass="sidebar-section"/>

            <Region styleClass="section-separator"/>
            <Button text="Dashboard" styleClass="sidebar-item" onMouseClicked="#openDashboard"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion d'Utilisateurs" styleClass="sidebar-item" onMouseClicked="#openUsersModule"/>
            <Region styleClass="section-separator"/>
            <Button text="Gestion de Produits" styleClass="sidebar-item" onMouseClicked="#openProductsModule"/>
            <Region styleClass="section-separator"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Region styleClass="section-separator"/>
            <Button text="Déconnexion" styleClass="sidebar-logout" onMouseClicked="#openAuthpage"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40 70;">

                <!-- PAGE TITLE -->
                <Label text="Ranking Of All Products" styleClass="section-title"/>

                <!-- BIG WRAPPER -->
                <VBox fx:id="rankingContainer" styleClass="ranking-container"/>

            </VBox>
        </ScrollPane>
    </center>

    <!-- SAME FOOTER -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 B2B Platform | All rights reserved" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
