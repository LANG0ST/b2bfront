<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fx.b2bfront.controller.Admin.UserDetailsController"
      spacing="25" alignment="TOP_CENTER"
      style="-fx-background-color: #FFFFFF; -fx-background-radius: 14;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- ===================== AVATAR + NAME ===================== -->
    <VBox alignment="CENTER" spacing="12">

        <!-- AVATAR CIRCLE -->
        <Label text="ðŸ‘¥" styleClass="user-avatar"/>

        <!-- USER NAME -->
        <Label fx:id="title" styleClass="user-title"/>

        <!-- Small Description -->
        <Label text="Profil Comapanie" styleClass="user-subtitle"/>
    </VBox>

    <!-- ===================== SEPARATOR ===================== -->
    <Region maxHeight="1" prefHeight="1" styleClass="separator-line"/>

    <!-- ===================== FORM-LIKE FIELDS ===================== -->
    <VBox spacing="18" alignment="TOP_LEFT" style="-fx-padding: 10 0 0 0;">

        <!-- Nom -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Nom :" styleClass="details-label"/>
            <Label fx:id="nameLabel" styleClass="details-value"/>
        </HBox>

        <!-- Tel -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="TÃ©lÃ©phone :" styleClass="details-label"/>
            <Label fx:id="phoneLabel" styleClass="details-value"/>
        </HBox>

        <!-- Email -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Email :" styleClass="details-label"/>
            <Label fx:id="emailLabel" styleClass="details-value"/>
        </HBox>

        <!-- Ville -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Ville :" styleClass="details-label"/>
            <Label fx:id="cityLabel" styleClass="details-value"/>
        </HBox>

        <!-- createdAt -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="CrÃ©e le :" styleClass="details-label"/>
            <Label fx:id="createdAtLabel" styleClass="details-value"/>
        </HBox>


        <!-- Status -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-field">
            <Label text="Statut :" styleClass="details-label"/>
            <Label fx:id="statusLabel" styleClass="details-value"/>
        </HBox>

    </VBox>

    <!-- ===================== BACK BUTTON ===================== -->
    <Button text="Retour" onAction="#goBack" styleClass="back-btn-text"/>

</VBox>
