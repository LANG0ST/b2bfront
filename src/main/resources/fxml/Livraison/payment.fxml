<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../style/checkout.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fx.b2bfront.controller.checkout.PaymentController">

    <!-- NAVBAR -->
    <top>
        <fx:include source="../components/Navbar.fxml" />
    </top>

    <center>
        <VBox spacing="40" styleClass="checkout-root">

            <HBox spacing="200">

                <!-- LEFT SIDE -->
                <VBox prefWidth="600" spacing="20">

                    <Label styleClass="checkout-title" text="Payment" />

                    <HBox spacing="10" styleClass="checkout-steps">
                        <Label styleClass="step-done" text="Address" />
                        <Label text="—" />
                        <Label styleClass="step-done" text="Shipping" />
                        <Label text="—" />
                        <Label styleClass="step-current" text="Payment" />
                    </HBox>

                    <Label styleClass="section-title" text="Enter Payment Details" />

                    <VBox prefWidth="480" spacing="12">
                        <TextField fx:id="cardName" prefWidth="465.0" promptText="Name on Card" />
                        <TextField fx:id="cardNumber" prefWidth="465.0" promptText="Card Number" />
                        <TextField fx:id="expiration" prefWidth="465.0" promptText="MM/YY" />
                        <TextField fx:id="cvv" prefWidth="465.0" promptText="CVV" />
                    </VBox>

                    <Button onAction="#placeOrder" styleClass="primary-button" text="Place Order" />

                </VBox>

                <!-- RIGHT SIDE CART SUMMARY -->
                <fx:include source="CartSummary.fxml" />

            </HBox>

        </VBox>
    </center>

</BorderPane>
