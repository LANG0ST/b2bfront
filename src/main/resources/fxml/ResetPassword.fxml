<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.geometry.Insets?>
    <?import javafx.scene.control.*?>
    <?import javafx.scene.layout.*?>

    <VBox xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.fx.b2bfront.controller.auth.ResetPasswordController"
          spacing="14"
          styleClass="popup-root"
          prefWidth="1400" prefHeight="300"
          stylesheets="@../style/auth-popups.css">

        <padding>
            <Insets top="18" right="18" bottom="18" left="18"/>
        </padding>

        <Label text="Reset password" styleClass="popup-title"/>
        <Label text="Paste the token from your email, then choose a new password."
               wrapText="true"
               styleClass="popup-subtitle"/>

        <VBox spacing="8">
            <Label text="Token" styleClass="popup-label"/>
            <TextField fx:id="tokenField" promptText="Paste token here" styleClass="popup-input"/>
        </VBox>

        <VBox spacing="8">
            <Label text="New password" styleClass="popup-label"/>
            <PasswordField fx:id="newPasswordField" promptText="Minimum 8 characters" styleClass="popup-input"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Confirm password" styleClass="popup-label"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Repeat new password" styleClass="popup-input"/>
        </VBox>

        <Label fx:id="statusLabel" managed="false" visible="false" wrapText="true"
               styleClass="popup-status"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#onCancel" styleClass="btn-secondary"/>
            <Button fx:id="resetBtn" text="Reset" onAction="#onReset" styleClass="btn-primary"/>
        </HBox>
    </VBox>
